{
  "name": "dentelis/phpunit-json-assert",
  "description": "PhpUnit extension for asserting json structure with dentelis/php-structure-validator",
  "license": "MIT",
  "authors": [
    {
      "name": "Dim Entelis",
      "email": "dentelis@gmail.com",
      "homepage": "https://www.linkedin.com/in/dentelis/"
    }
  ],
  "type": "library",
  "require": {
    "php": "~8.2",
    "ext-mbstring": "*",
    "dentelis/php-json-structure-validator": "^2.0.0@dev"
  },
  "autoload": {
    "psr-4": {
      "Dentelis\\PhpUnitJsonAssert\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "scripts": {
    "test": "vendor/bin/phpunit tests --fail-on-risky  --display-warnings --display-errors --display-notices  --display-skipped --display-deprecations "
  },
  "require-dev": {
    "phpunit/phpunit": "^10.2@dev"
  }
}
